		"koa-bodyparser": "4.2.1",
		"koa-router": "8.0.6",
		"pg": "7.18.2",
		"pg-hstore": "2.3.3",
		"pretty-ms": "6.0.1",
		"sequelize": "5.21.5",
		"sequelize-cli": "5.5.1",
		"uuid": "3.4.0"
	},
	"devDependencies": {
		"eslint": "6.8.0",
		"jest": "25.1.0",
		"nodemon": "2.0.2"
